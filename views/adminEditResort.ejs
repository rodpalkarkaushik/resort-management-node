<!DOCTYPE html>
<html>
<head>
  <title>Edit Resort</title>
</head>
<body>

<h2>Edit Resort</h2>

<form action="/admin/resorts/edit/<%= resort.id %>" method="POST">
  <label>Name:</label>
  <input type="text" name="name" value="<%= resort.name %>" required><br>

  <label>Price:</label>
  <input type="number" name="price" value="<%= resort.price %>" required><br>

  <label>Image URL:</label>
  <input type="text" name="image_url" value="<%= resort.image_url %>"><br>
  <input type="text" name="image_url_2" value="<%= resort.image_url_2 %>">
  <input type="text" name="image_url_3" value="<%= resort.image_url_3 %>">
  <input type="text" name="image_url_4" value="<%= resort.image_url_4 %>">

  <label>Contact:</label>
  <input type="text" name="contact" value="<%= resort.contact %>"><br>

  <label>Address:</label>
  <input type="text" name="address" value="<%= resort.address %>"><br>

  <label>Description:</label>
  <textarea name="description"><%= resort.description %></textarea><br>

  <button type="submit">Update</button>
</form>

<a href="/admin/resorts">Back</a>

</body>
</html>