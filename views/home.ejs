<!DOCTYPE html>
<html>
<head>
  <title>Luxury Resorts</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #f8f9fa, #e9ecef);
      font-family: 'Segoe UI', sans-serif;
    }
    .navbar {
      background-color: #343a40;
    }
    .navbar a {
      color: white !important;
    }
    .resort-card {
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
      border-radius: 10px;
      overflow: hidden;
      margin-bottom: 30px;
    }
    .resort-card img {
      height: 200px;
      object-fit: cover;
    }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">üèùÔ∏è Luxury Resorts</a>
    <div class="d-flex ms-auto">
      <% if (!username) { %>
        <a class="nav-link" href="/login">Login</a>
        <a class="nav-link" href="/register">Register</a>
      <% } else { %>
        <span class="nav-link">Welcome, <%= username %></span>
        <a class="nav-link" href="/logout">Logout</a>
      <% } %>
    </div>
  </div>
</nav>

<div class="container mt-4">
  <h2 class="text-center mb-4">Explore Our Resorts</h2>
  <div class="row">
    <% resorts.forEach(r => { %>
      <div class="col-md-4">
        <div class="card resort-card">
          <!-- Carousel -->
          <div id="carousel<%= r.id %>" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">
              <% [r.image_url, r.image_url_2, r.image_url_3, r.image_url_4].forEach((url, index) => {
                   if (url) { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="<%= url %>" class="d-block w-100" alt="Resort Image">
                </div>
              <% } }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= r.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= r.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon"></span>
            </button>
          </div>

          <div class="card-body">
            <h5 class="card-title"><%= r.name %></h5>
            <p class="card-text"><%= r.description %></p>
            <p><b>Price:</b> ‚Çπ<%= r.price %></p>
            <% if (!username) { %>
              <a href="/login" class="btn btn-primary w-100">Book Resort</a>
            <% } else { %>
              <form action="/user/book/<%= r.name %>" method="GET">
                <button type="submit" class="btn btn-success w-100">Book Resort</button>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>