<!DOCTYPE html>
<html>
<head>
  <title>User Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      overflow-x: hidden;
    }

    .bg-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }

    .bg-container img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0;
      transition: opacity 1s ease-in-out;
    }

    .bg-container img.active {
      opacity: 1;
    }

    .card {
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
      transition: transform 0.2s;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .dashboard-content {
      padding-top: 80px;
    }
  </style>
</head>
<body>

<!-- Dynamic Background Slideshow -->
<div class="bg-container">
  <% resortImages.forEach((url, index) => { %>
    <img src="<%= url %>" class="<%= index === 0 ? 'active' : '' %>">
  <% }) %>
</div>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">üèùÔ∏è Luxury Resorts</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/user/resorts">Resorts</a></li>
        <li class="nav-item"><a class="nav-link" href="/user/bookings">My Bookings</a></li>
        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Dashboard Content -->
<div class="container dashboard-content">
  <h2 class="text-center text-white mb-4">Welcome, <%= username %> üëã</h2>

  <div class="row justify-content-center">
    <div class="col-md-4 mb-4">
      <div class="card text-center p-4 bg-light">
        <h5 class="card-title">Explore Resorts</h5>
        <p class="card-text">Browse our luxurious resorts and plan your next getaway.</p>
        <a href="/user/resorts" class="btn btn-primary">View Resorts</a>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card text-center p-4 bg-light">
        <h5 class="card-title">My Bookings</h5>
        <p class="card-text">Check your upcoming and past bookings with ease.</p>
        <a href="/user/bookings" class="btn btn-success">My Bookings</a>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card text-center p-4 bg-light">
        <h5 class="card-title">Logout</h5>
        <p class="card-text">End your session securely.</p>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Background Slideshow Script -->
<script>
  const images = document.querySelectorAll('.bg-container img');
  let current = 0;

  setInterval(() => {
    images[current].classList.remove('active');
    current = (current + 1) % images.length;
    images[current].classList.add('active');
  }, 3000);
</script>
</body>
</html>